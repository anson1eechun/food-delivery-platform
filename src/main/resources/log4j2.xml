<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <!-- 定義日誌檔案路徑 -->
        <Property name="LOG_PATH">logs</Property>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- 控制台輸出 -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- 一般日誌文件 (INFO 及以上) -->
        <RollingFile name="InfoFileAppender"
                     fileName="${LOG_PATH}/app-info.log"
                     filePattern="${LOG_PATH}/app-info-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <!-- 每天滾動一次 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- 檔案大小超過 10MB 就滾動 -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- 保留最近 30 個檔案 -->
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <!-- 錯誤日誌文件 (ERROR 及以上) -->
        <RollingFile name="ErrorFileAppender"
                     fileName="${LOG_PATH}/app-error.log"
                     filePattern="${LOG_PATH}/app-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>

        <!-- 業務日誌文件 (所有級別，用於完整記錄) -->
        <RollingFile name="BusinessLogAppender"
                     fileName="${LOG_PATH}/business.log"
                     filePattern="${LOG_PATH}/business-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="20MB"/>
            </Policies>
            <DefaultRolloverStrategy max="60"/>
        </RollingFile>

        <!-- 外送服務專用日誌 -->
        <RollingFile name="DeliveryServiceAppender"
                     fileName="${LOG_PATH}/delivery-service.log"
                     filePattern="${LOG_PATH}/delivery-service-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- 外送服務專用 Logger -->
        <Logger name="org.example.service.DeliveryService" level="debug" additivity="false">
            <AppenderRef ref="DeliveryServiceAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="ErrorFileAppender"/>
        </Logger>

        <!-- 主應用程式 Logger -->
        <Logger name="org.example" level="info" additivity="false">
            <AppenderRef ref="BusinessLogAppender"/>
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="ErrorFileAppender"/>
        </Logger>

        <!-- 根 Logger (預設配置) -->
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="InfoFileAppender"/>
            <AppenderRef ref="ErrorFileAppender"/>
        </Root>
    </Loggers>
</Configuration>